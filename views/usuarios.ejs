<%- include('partials/_header.ejs') %>

<!--Parte derecha: Formulario para añadir un usuario
    Parte izquierda: Listado de usuarios-->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <!-- Formulario para añadir un usuario -->
            <h2>Añadir Usuario</h2>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" required>
                </div>
                <div class="form-group">
                    <label for="apellido">Apellido:</label>
                    <input type="email" class="form-control" id="apellido" name="apellido" required>
                </div>
                <div class="form-group">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <label for="rol">Selecciona un rol:</label>
                    <select id="rol" name="rol">
                        <option value="administrador">Administrador</option>
                        <option value="Profesor">Profesor</option>
                        <option value="Alumno">Alumno</option>
                    </select>
                
            </form>
            <button type="submit" class="btn btn-primary">Añadir</button>
        </div>

        <div class="col-md-6">
            <!-- Listado de usuarios -->
            <h2>Listado de Usuarios</h2>
            <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>N°</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Operaciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i < usuarios.length; i++) { %>
                    <tr>
                      <td><%= i + 1%></td>
                      <td><strong><%= usuarios[i].nombre %></strong></td>
                      <td><%= usuarios[i].apellidos %></td>
                      <td><%= usuarios[i].email %></td>
                      <td><%= usuarios[i].rol %></td>
                      <td>
                        <a href="/usuarios/delete/<%= usuarios[i]._id %>" class="btn btn-danger">
                          Delete
                        </a>
                        <a href="/usuarios/editUsuarios/<%= usuarios[i]._id %>" class="btn btn-info">
                          Edit
                        </a>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
        </div>
        
    </div>
</div>


<%- include('partials/_footer.ejs') %>

